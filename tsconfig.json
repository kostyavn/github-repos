{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vitest/globals", "@testing-library/jest-dom", "@testing-library/user-event"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/app/*"],
      "@processes/*": ["src/processes/*"],
      "@pages/*": ["src/pages/*"],
      "@widgets/*": ["src/widgets/*"],
      "@features/*": ["src/features/*"],
      "@entities/*": ["src/entities/*"],
      "@shared/*": ["src/shared/*"],
      "@twconfig": ["tailwind.config.ts"],

      "@setup": ["__tests__/setup-util.tsx"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    ".eslintrc.cjs",
    ".vitest/setup.tsx",
    "tailwind.config.ts",
    "postcss.config.cjs"
  ],
  "exclude": ["node_modules"]
}
